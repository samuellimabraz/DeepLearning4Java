<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="quickdrawPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>br.deeplearning4java.game.model.MyCNNModel</class>
        <class>br.deeplearning4java.game.model.PredictionModel</class>
        <class>br.deeplearning4java.game.model.GameSession</class>
        <class>br.deeplearning4java.game.model.Round</class>
        <class>br.deeplearning4java.game.model.Draw</class>
        <class>br.deeplearning4java.game.model.PredictionResult</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/quickdraw"/>
            <property name="javax.persistence.jdbc.user" value="quickdraw"/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="quickdraw"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="javax.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="neuralNetworkPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>br.deeplearning4java.neuralnetwork.core.models.NeuralNetwork</class>
        <class>br.deeplearning4java.neuralnetwork.core.layers.Layer</class>
        <class>br.deeplearning4java.neuralnetwork.core.layers.TrainableLayer</class>
        <class>br.deeplearning4java.neuralnetwork.core.layers.Dense</class>
        <class>br.deeplearning4java.neuralnetwork.core.layers.ZeroPadding2D</class>
        <class>br.deeplearning4java.neuralnetwork.core.layers.Dropout</class>
        <class>br.deeplearning4java.neuralnetwork.core.layers.Flatten</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/neural_network"/>
            <property name="javax.persistence.jdbc.user" value="quickdraw"/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="quickdraw"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>